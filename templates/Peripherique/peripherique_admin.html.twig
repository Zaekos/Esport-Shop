{% extends 'baseadmin.html.twig' %}
    {% block content %}
        <main>
            <div class="titre">PERIPHERIQUE</div>

            {% for peripherique in peripheriques %}
                <article class="articleList">
                    <div class="articleListImg">
                        <div class="imgArticle">
                            <img src="{{ asset ('img/peripherique/'~peripherique.id~'.jpg')}}" alt="{{ peripherique.name }}" class="resp">
                        </div>
                        <div>
                            <div>
                                <a href="{{ path ('peripheriqueid', {'id':peripherique.id}) }}">{{ peripherique.name }} </a>
                                <div>
                                    <a href="{{ path ('peripherique_update', {'id':peripherique.id}) }}">Update</a>
                                </div>
                                <div>
                                    <a href="{{ path ('peripherique_delete', {'id':peripherique.id}) }}">Supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="articleListPrix">
                        {{ peripherique.price }} €
                    </div>
                </article>
            {% endfor %}
            <div class="ajout">
                <a href="{{ path('peripherique_insert') }}">Ajouter un périphérique</a>
            </div>
        </main>

    {% endblock %}